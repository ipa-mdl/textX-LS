{
  "name": "textX",
  "description": "VS Code extension for domain specific languages based on textX",
  "author": "textX team",
  "repository": "https://github.com/textX/textX-LS",
  "license": "MIT",
  "version": "0.1.0",
  "publisher": "textX",
  "icon": "art/textX-logo.png",
  "engines": {
    "vscode": "^1.33.1"
  },
  "main": "./dist/extension",
  "categories": [
    "Programming Languages",
    "Domain Specific Languages",
    "DSL",
    "textX"
  ],
  "activationEvents": [
    "workspaceContains:Textxfile",
    "onLanguage:textx",
    "onLanguage:textxfile"
  ],
  "contributes": {
    "languages": [
      {
        "id": "textxfile",
        "aliases": [
          "Textxfile"
        ],
        "filenamePatterns": [
          "*.textxfile",
          "Textxfile"
        ]
      },
      {
        "id": "textx",
        "aliases": [
          "textX"
        ],
        "extensions": [
          ".tx"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "textx",
        "scopeName": "source.textx",
        "path": "./syntaxes/textx.json"
      },
      {
        "language": "textxfile",
        "scopeName": "source.textxfile",
        "path": "./syntaxes/textxfile.json"
      }
    ],
    "snippets": [
      {
        "language": "textxfile",
        "path": "./snippets/textxfile.json"
      }
    ]
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "vscode:prepublish": "webpack --mode production && chmod +x ./bin/copy-wheels.sh && sh ./bin/copy-wheels.sh",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch"
  },
  "devDependencies": {
    "@types/node": "^12.0.0",
    "tslint": "^5.16.0",
    "tslint-microsoft-contrib": "^6.1.1",
    "ts-loader": "^6.0.0",
    "tsutils": "^3.10.0",
    "typescript": "^3.4.5",
    "vscode": "^1.1.34",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.2"
  },
  "dependencies": {
    "vscode-languageclient": "^5.2.1"
  }
}
